<%= render 'shared/header' %>

<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <%= link_to '新規作成', new_article_path , class: "btn btn-primary my-3" %>
      <table class="table table-hover">
        <thead>
          <tr>
            <th class="col-lg-6">Title</th>
            <th class="col-lg-3">Menu</th>
            <th class="col-lg-3"></th>
          </tr>
        </thead>
        <tbody>
          <% @articles.each do |article| %>
            <tr>
              <td><%= link_to article.title, article_path(article) %></td>
              <td><%= link_to '編集', edit_article_path(article) , class: "btn btn-light" %></td>
              <td><%= link_to '削除', article_path(article),
                            method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger" %></td>
            </tr>
          <% end %>
          
        </tbody>
      </table>
      
    </div>
  </div>  
</div>
